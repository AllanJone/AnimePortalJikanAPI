@model IEnumerable<AnimePortalJikanAPI.JikanDecoder.Model.Secondary.AnimeTopEntry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section id="speakers" class="wow fadeInUp">
    <div class="container">
        <div class="section-header">
            <h2>Popular Anime</h2>
            <p>Here are the top 50 Anime</p>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card mb-3 shadow-sm">
                        <img class="bd-placeholder-img card-img-top img-fluid" src="@Html.DisplayFor(modelItem => item.ImageURL)" alt="@Html.DisplayFor(modelItem => item.Title)">
                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Title)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Details", "Anime", new { id = Html.DisplayFor(modelItem => item.MalId) })">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
